<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:background="#FFFFFF">

    <TextView
        android:id="@+id/layout_students_item_textView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="TextView"
        android:textColor="#272727"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/layout_students_item_divider"/>

    <View
        android:id="@+id/layout_students_item_divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="#1F000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/layout_students_item_textView"
        app:layout_constraintStart_toStartOf="@+id/layout_students_item_textView"
        app:layout_constraintTop_toBottomOf="@+id/layout_students_item_textView">

    </View>

</androidx.constraintlayout.widget.ConstraintLayout>
